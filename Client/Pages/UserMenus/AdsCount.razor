@page "/Ads-Count"

@using BlazorBootstrap;
@using Jobbvin.Shared.Models;
@using Microsoft.AspNetCore.Authorization;

@attribute [Authorize]

<div class="container-fluid pt-4">
    <div class="row">
        <div class="col-sm-5 col-md-5 col-lg-3">
            <Jobbvin.Client.Components.UserMenu />
        </div>

        <div class="col-sm-7 col-md-7 col-lg-9">
            @if (!string.IsNullOrEmpty(error))
            {
                <div class="alert alert-danger mt-3 mb-0">@error</div>
            }
            <div class="row pt-0">
                <div class="col-sm-10 col-md-10 col-lg-10 pb-0">
                    <h4>Ads Count</h4>
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 pb-0">
                </div>
            </div>
            <hr>
            <Grid TItem="Jobbvin.Shared.Models.Pic_Ads_Count" class="table table-hover table-bordered table-striped"
                  PageSizeSelectorVisible="true"
                  PageSizeSelectorItems="@(new int[] { 5,10,20 })"
                  ItemsPerPageText="Items per page"
                  HeaderRowCssClass="bg-primary text-white border-bottom-0"
                  PaginationItemsTextFormat="{0} - {1} of {2} items"
                  DataProvider="AdsCountDataProvider" AllowPaging="true" PageSize="10" AllowSorting="true" Responsive="true" PaginationAlignment="Alignment.End">
          
                <GridColumn TItem="Pic_Ads_Count" HeaderText="Total Schemes" PropertyName="TotalSchemes" SortKeySelector="item => item.TotalSchemes">
                    @context.TotalSchemes
                </GridColumn>

                <GridColumn TItem="Pic_Ads_Count" HeaderText="Total Ads" PropertyName="TotalAds" SortKeySelector="item => item.TotalAds">
                    @context.TotalAds
                </GridColumn>
                <GridColumn TItem="Pic_Ads_Count" HeaderText="Total Used Ads" PropertyName="TotalUsedAds" SortKeySelector="item => item.TotalUsedAds">
                    @context.TotalUsedAds
                </GridColumn>
                <GridColumn TItem="Pic_Ads_Count" HeaderText="Total Balance Ads" PropertyName="TotalBalanceAds" SortKeySelector="item => item.TotalBalanceAds">
                    @context.TotalBalanceAds
                </GridColumn>
            </Grid>
        </div>
    </div>
</div>

<style>
    .mylabel {
        color: #3f4146 !important;
        font-weight: bold !important;
    }

    label {
        display: inline-block !important;
        margin-bottom: 0.5rem !important;
    }

    .form-group {
        margin-bottom: 1rem !important;
    }
</style>