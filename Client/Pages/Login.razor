@page "/Login"
@using System.ComponentModel.DataAnnotations;
@using BlazorBootstrap
@using Jobbvin.Client.Services;
@using Microsoft.AspNetCore.WebUtilities;
@using Microsoft.AspNetCore.Components.Forms;
@* @using Microsoft.AspNetCore. *@
@inject IAuthenticationService AuthenticationService;
@inject NavigationManager navigationManager;

<div class="col-md-6 offset-md-3 mt-5">
    <div class="alert alert-info d-flex align-items-center text-center">
        New Customer?  <a href="Registration" class="nav-item nav-link"><Button Color="ButtonColor.Primary"> Signup </Button></a>
    </div>
    <div class="card">
        <h4 class="card-header">Login</h4>
        <div class="card-body">
            <Microsoft.AspNetCore.Components.Forms.EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Username</label>
                    <InputText @bind-Value="model.Username" class="form-control" />
                    <ValidationMessage For="@(() => model.Username)" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <InputText @bind-Value="model.Password" type="password" class="form-control" />
                    <ValidationMessage For="@(() => model.Password)" />
                </div>
                 <div class="form-group">
                  <br />
                <button class="btn btn-primary">

                    @if (loading) {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    }
                    Login
                </button>
                </div>
                @if (!string.IsNullOrEmpty(error)) {
                    <div class="alert alert-danger mt-3 mb-0">@error</div>
                }
            </Microsoft.AspNetCore.Components.Forms.EditForm>
        </div>
    </div>
</div>